{
	"name" : "jimdelois/context-specification" ,
	"description": "A library for PHPUnit to provide support for the BDD ContextSpecification-style testing pattern",
	"type": "library",
	"keywords": [
		"phpunit",
		"xunit",
		"testing",
		"context",
		"specification",
		"contextspec"
	],
	"homepage": "https://github.com/jimdelois/context-specification/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Jim DeLois",
			"email": "code@deloisweb.com",
			"homepage": "http://www.deloisweb.com/"
		}
	],
	"require" : {
		"php": ">=5.3.0"
	},
    "require-dev" : {
        "phpunit/phpunit": "3.7.*@dev" ,
        "phing/phing": "2.7.*@dev" ,
        "phpdocumentor/phpdocumentor": "2.6.0"
    },
    "autoload": {
        "psr-4": {
            "ContextSpecification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ContextSpecification\\": "tests/src/"
        }
    },

	"suggest": {
		"phake/phake": "A terrific Mocking framework which works very well with PHPUnit.",
        "fiunchinho/phpunit-randomizer": "A randomization runner to help verify test isolation"
	}
}